<div class="container">
  <div class="wrapper">
    <div class="header">
      <%= link_to fa_icon("arrow-left", :class => "icon back-btn"), rates_path %>
      <h2>Edit your currencies and amount</h2>
    </div>
    <div class="form-wrapper">
    <%=form_for :rate, url: rate_path(@rate), method: :patch do |f| %>
      <% if @rate.errors.any? %>
        <% @rate.errors.full_messages.each do |msg| %>
          <div class="alert alert-danger">
            <%= msg %>
          </div>
        <% end %>
      <% end %>
      <p>
        <%=f.label :base_currency %><br>
        <%= select_tag :base_currency, options_for_select(Rate::AVAILABLE_CURRENCIES,:selected =>@rate["base_currency"]), {:class => "form-control"} %>
      </p>
      <p>
        <%=f.label :target_currency %><br>
        <%= select_tag :target_currency, options_for_select(Rate::AVAILABLE_CURRENCIES, :selected =>@rate["target_currency"]), {:class => "form-control"} %>
      </p>
      <p>
        <%=f.label :amount %><br>
        <%=f.text_field :amount , {:class => "form-control"} %>
      </p>
        <p>
          <%= f.label :weeks %><br>
          <%= f.text_field :weeks, {:class => "form-control"} %>
        </p>

        <p class="submit-p">
        <%=f.submit 'SAVE' ,:class => "btn btn-success app-btn"  %>
      </p>
    <% end %>
    </div>
  </div>
</div>