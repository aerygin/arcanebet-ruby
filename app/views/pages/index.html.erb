<% if current_user %>
  <script type="text/javascript">
      window.location.href = "/rates"
  </script>
<% end %>
<div class="container">
  <div class="login-wrapper">

    <h2>Welcome to exchange rate app!</h2>

    <div class="sign-in-button-wrapper">
      <% unless current_user %>
        <%= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, :class => "btn btn-danger sign-in-button" %>
      <% end %>
    </div>
  </div>
</div>
